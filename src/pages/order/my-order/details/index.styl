.my-order-details
  .w100
    width 100px
  .w193
    width 193px
  .w559
    width 590px
  .rowcsf
    padding-bottom 30px
    border-bottom 1px solid #999999
  .titlecs
    font-size 15px
    font-weight bold
  .bbc
    border-bottom 1px solid #e4e4e4
    padding-bottom 10px
  .rowcs
    padding 30px 0
    border-bottom 1px solid #999999
  .order-info-table

    &__header
      padding 10px 20px
      background-color $color-grey5
      border 1px solid $color-grey4
      border-top-left-radius 4px
      border-top-right-radius 4px
    
    &__body
      border 1px solid $color-grey4
      border-top none
      border-bottom-left-radius 4px
      border-bottom-right-radius 4px

      &--left
        border-right 1px solid $color-grey4
        padding 20px
      
      &--center
        padding 20px

      &--right
        padding 20px

        .btn-list
          list-style-type none

          &__item-text
            color #333
            padding 0px !important
            height 20px !important
            line-height 20px !important
            &:hover
              color $color-green1 !important
  
  .task-info-table
    border 1px solid $color-grey4
    border-radius 4px

    &__header
      tr
        th
          border-bottom 1px solid $color-grey4
          line-height 40px
    
    &__body
      tr
        th
          &:last-child
            border-left 1px solid $color-grey4
      