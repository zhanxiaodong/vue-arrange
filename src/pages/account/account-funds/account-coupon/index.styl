.account-coupon
  
  .coupon-exchange

    &__input
      width 270px
      height 30px
      line-height 30px
      background-color #e8e8e8
      border none
      outline none
      font-size 14px
      padding 10px 20px
      border-top-left-radius 4px
      border-bottom-left-radius 4px

    &__btn
      background-color $color-green1
      border none
      color $color-white
      padding 10px
      line-height 30px
      vertical-align bottom
      width 60px
      border-top-right-radius 4px
      border-bottom-right-radius 4px
      font-size 14px
      font-weight bolder

      &:hover,
      &:focus,
      &:active
        background-color $color-green2
