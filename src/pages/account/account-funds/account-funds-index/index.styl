.account-funds-index
  .recharge
    list-style-type none

    &__monery
      border 1px solid $color-grey4
      border-radius 4px
      width 100%
      float left
      padding 10px 0
      margin-bottom 15px
      text-align center

      &.active
        border 1px solid $color-green1
        color $color-green1
    
    &__other-monery
      input
        border none
        background-color #f5f5f5
        height 40px

    &__payment
      list-style-type none

      li
        line-height 50px
        height 50px
        margin-bottom 20px
        border-bottom 1px solid #eee
        padding 0 20px 20px

        img
          width 50px
          margin-right 20px
          float left
        
        h5
          font-size 14px
          float left

        i
          float right
          color $color-green1
          line-height 50px
          font-size 20px
        
        &:last-child
          border-bottom none
          margin-bottom 0
