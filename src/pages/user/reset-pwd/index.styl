.reset-pwd
  background-color $color-black1
  position absolute
  top 0
  left 0
  right 0
  bottom 0

  .form
    width max-content
    position fixed
    top 50%
    left 50%
    transform translateX(-50%) translateY(-50%)

    .left
      position relative
      width 250px
      height 290px
      text-align center
      float left
      background-color $color-white
      border-top-left-radius 4px
      border-bottom-left-radius 4px
      
      .name
        position absolute
        top 50%
        left 50%
        transform translateX(-50%) translateY(-50%)
        h1
          letter-spacing 5px

    .right
      float left
      height 232px
      padding 29px 60px
      background-color rgba(255, 255, 255, .4)
      border-top-right-radius 4px
      border-bottom-right-radius 4px

      > p > a
        color $color-black2

      .mb0
        margin-bottom 0 !important
