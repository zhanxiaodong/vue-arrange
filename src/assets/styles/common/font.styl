/**
 * ft12, .ft14,..., .ft50
 */
for $i in 6..25
  .ft{$i*2}
    font-size $i * 2px !important

// .ft10rem, .ft11rem, ..., .ft30rem
for $i in 10..30
  .ft{$i}rem
    font-size 1rem * 0.1 * $i

/**
 * line-height 单位px
 */
// .lh10, .lh15, ... .lh100
for $i in 1..20
  .lh{$i*5}
    line-height 5px * $i

/**
 * line-height 单位%
 */
// .lh10p, .lh15p, ... .lh200p
for $i in 1..20
  .lh{$i*5}p
    line-height 5% * $i

/**
 * 设置相同的height与line-height的文字垂直居中方式
 */
// .h-lh5, .h-lh10, ... .h-lh1000
for $i in 1..200
  .h-lh{$i*5}
    height 5px * $i
    line-height 5px * $i

/**
 * letter-spacing
 */
for $i in -100..100
  .ls{$i}
    letter-spacing $i * 0.01px

/**
 * font-weight
 */
for $i in 1..9
  .ft-w{$i*100}
    font-weight 100 * $i

.ft-f-regular
  font-family regular

.ft-bd
  font-weight bold

.ft-w-n
  font-weight normal

.ft-italic
  font-style italic

/**
 * vertical-align
 */
.va-top
  vertical-align top

.va-text-top
  vertical-align text-top;

.va-text-bottom
  vertical-align text-bottom

.va-bottom
  vertical-align bottom

.va-middle
  vertical-align middle

.va-super
  vertical-align super

.va-sub
  vertical-align sub

.va-baseline
  vertical-align baseline

.va-wk-baseline
  vertical-align -webkit-baseline-middle

/**
 * text-align
 */
.text-left
  text-align left

.text-center
  text-align center

.text-right
  text-align right

/**
 * 换行
 */
.white-space-pre-wrap
  white-space pre-wrap


.code
  word-break break-all
  border 1px solid #e6e6e6
  padding 6px 10px
  border-radius 3px
  color #808080
  background-color #f8f8f8

hr
  border 0
  border-top 1px solid #ddd
