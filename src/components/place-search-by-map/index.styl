.place-search-by-map
  .map
    &__address
      position absolute
      width 80%
      z-index 1
      width 80%
      transform translateX(-50%)
      left 50%
      padding 10px
      background-color $color-white
      top 20px

      .el-select,
      .el-input
        input
          border none
          border-bottom 1px solid $color-grey4
          border-radius 0
    
      &__street-list
        position absolute
        width 100%
        margin-top 10px
        max-height 200px
        overflow auto
        box-shadow 1px 1px 10px rgba(0, 0, 0, 0.2)
        
        ul
          background-color #fff    
          list-style-type none  
          border 1px solid #eee
          // border-radius 4px
          box-shadow 1px 1px 1px rgba(0, 0, 0, 0.2)

        li
          padding 10px 20px
          border-bottom 1px solid rgba(0, 0, 0, 0.1)
