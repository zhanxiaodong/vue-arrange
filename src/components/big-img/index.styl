.bigImg
  
  /* bigimg */
  .img-view
    position: inherit
    width: 100%
    height: 100%

  /*遮罩层样式*/
  .img-view .img-layer
    position: fixed
    z-index: 999
    top: 0
    left: 0
    background: rgba(0, 0, 0, 0.7)
    width: 100%
    height: 100%
    overflow: hidden

  /*不限制图片大小，实现居中*/
  .img-view .img img
    max-width: 100%
    display: block
    position: absolute
    left: 0
    right: 0
    margin: auto
    z-index: 1000