.cooperative-model
  display inline-block

  .selected-model-list
    list-style-type none
    display inline-flex
    .selected-model-item
      text-align center
      margin-right 10px
      line-height 20px
      img
        width 80px
        height 80px
        border-radius 80px
        border 2px solid #e690b3

  .btn-add-model
    color $color-grey1
    border 1px dashed $color-grey4
    border-radius 80px
    cursor pointer
    position relative
    overflow hidden
    height 80px
    width 80px
    text-align center
    line-height 20px
    &:hover,
    &:focus,
    &:active
      border-color $color-green1
    
    i
      margin-top 14px
      font-size 32px
    
    &__text
      font-size 12px
      margin-top 2px

  .model-list
    .model-item
      position relative
      text-align center
      margin-bottom 10px
      img
        border-radius 100px
        border 2px solid #e690b3

      .select-icon
        display none
        position absolute
        transform translateX(-50%) translateY(-50%)
        left 50%
        top 52px
        text-shadow 0px 1px 1px rgba(0, 0, 0, 0.5)

      &.active
        img
          opacity .5

        .select-icon
          display block