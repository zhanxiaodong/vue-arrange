.coupon

  &__card
    display inline-flex
    padding 20px 0
    box-shadow 0px 1px 10px rgba(0, 0, 0, 0.19)
    border-radius 5px

    &.top-green
      border-top 2px solid $color-green1
    
    &.top-red
      border-top 2px solid $color-red1

    &__status
      right 15px
      font-size 12px
      top 10px
      color $color-red1
    
    &__left
      float left
      text-align center
      width 120px
      border-right 1px dotted $color-grey4
      margin-right 30px

    &__right
      float left
      width 220px
      font-size 12px
      padding 2px 0
  